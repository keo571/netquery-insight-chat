# Dockerfile for Universal Agent Chat Frontend (React)
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy the entire project
COPY public ./public
COPY src ./src
COPY .env.default ./.env

# Expose the port
EXPOSE 3000

# Start the React development server
CMD ["npm", "start"]